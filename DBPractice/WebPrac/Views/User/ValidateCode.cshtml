@{
    ViewBag.Title = "New Password";
}


<table align="center" style="margin:100px 0px 0px 385px">
    <tr>
        <td>
            <div style="margin:-40px 0px; position:center">
                <h1 style="color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">User Management System</h1>
            </div>
            <div class="form">
                <form class="login-form" method="POST" action="@Url.Content("~/user/newpasswd")">
                    <h3><b>New Password</b></h3>
                    <input type="password" id="passwd" name="passwd" placeholder="new password" />
                    <input style="background: black; color: white; cursor: progress;" name="btnPass" id="btnPass" type="submit" value="Change Password">
                    <br /><span style="color:red">@ViewBag.Message</span>
                </form>
            </div>
        </td>
    </tr>
</table>

