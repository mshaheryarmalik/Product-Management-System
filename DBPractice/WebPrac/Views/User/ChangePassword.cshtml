
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_MyProductLayout.cshtml";
}

<table align="center" style="margin:100px 0px 0px 385px">
    <tr>
        <td>
            <div style="margin:-40px 0px; position:center">
                <h1 style="color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">User Management System</h1>
            </div>
            <div class="form">
                <form class="login-form" method="POST" action="@Url.Content("~/user/ValidatePasswd")">
                    <h3><b>Change Password</b></h3>
                    <input type="password" id="oldPasswd" name="oldPasswd" placeholder="Old Password" />
                    <input type="password" id="newPasswd" name="newPasswd" placeholder="New Password" />
                    <input type="password" id="confirmPasswd" name="confirmPasswd" placeholder="Confirm Password" />
                    <input style="background: black; color: white; cursor: progress;" name="btnChangePasswd" id="btnChangePasswd" type="submit" value="Continue">
                    <br /><span style="color:red">@ViewBag.Message</span>
                </form>
            </div>
        </td>
    </tr>
</table>


