@model  PMS.Entities.UserDTO
@{
    
     if(Model.UserID != 0)
     {
         ViewBag.Title = "Update User";
         Layout = "~/Views/Shared/_MyProductLayout.cshtml";
     }
     else
     {
         ViewBag.Title = "Sign Up";
     }
}

<table align="center" style="margin:100px 0px 0px 385px">
    <tr>
        <td>
            <div style="margin:-40px 0px; position:center">
                <h1 style="color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">User Management System</h1>
            </div>
            <div class="login-page">
                <div class="form">
                    <form class="login-form" method="POST" action="@Url.Content("~/User/Save")" enctype="multipart/form-data">
                        
                        @if(@Model.UserID == 0)
                        {
                            <h3><b>Sign Up</b></h3>
                        }
                        else
                        {   
                            <h3><b>Edit User</b></h3>
                        }
                        <input type="hidden" name="UserID" value="@Model.UserID" />
                        <input type="hidden" name="PictureName" value="@Model.PictureName" />
                        <input required type="text" id="Name" name="Name" placeholder="name" value="@Model.Name"/>
                        @if(@Model.UserID == 0)
                        { 
                            <input required type="text" id="Login" name="Login" placeholder="username" value="@Model.Login"/>
                            <input required type="password" id="Password" name="Password" placeholder="password" />
                        }
                        @if(@Model.UserID == 0) { 
                        <input required type="email" id="Email" name="Email" placeholder="Email" />
                        <input required type="file" id="image" name="image" placeholder="Choose Image" />
                        }
                        else {
                            <input type="file" id="image" name="image" placeholder="Choose Image" />
                        }
                        @if(@Model.UserID == 0)
                        { 
                            <input style="background: black; color: white; cursor: progress;" name="btnSignup" id="btnSignup" type="submit" value="Sign Up">
                        }
                        else
                        {
                            <div style="margin-left:150px;padding-bottom:40px;">
                                <img src="~/uploadedFiles/@Model.PictureName" width="100" height="100" />
                            </div>
                            <input style="background: black; color: white; cursor: progress;" name="btnSignup" id="btnSignup" type="submit" value="Update User">
                        }
                        <br /><span style="color:red">@TempData["Message"]</span>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>
