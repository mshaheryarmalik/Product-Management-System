<script>
    function deleteFun(obj)
    {
        return confirm("Are you sure to delete?");
    }

    $(function () {
        $(".editbutton").click(function () {
            var pid = $(this).attr("pid");
            $("#ProductID").val(pid);
        });
    });
</script>


}
